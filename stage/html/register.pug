-var pageTitle = 'Register'
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title #{pageTitle}
        include pug/layout/links
    body.login
        section.form.my-4.mx-5.text-center
            .container
                .row.no-gutters
                    .col-lg-5
                        img.img-fluid.reg-img(src="imge/863694.png")
                    .col-lg-7.px-2.pt-2
                        img.rounded-circle(src="imge/logo.jpg" width="15%")
                        h1.text-center.py-3.font-weight-bold Tokyo Code
                        a.p-2.home(href="index.html" type="button")
                            i.fas.fa-arrow-alt-circle-left
                            |  Go Home
                        form#form
                            .form-row
                                .col-lg-5.m-auto
                                    .parent
                                        input#firstname.form-control.my-3.p-4(type="text" placeholder="First Name")
                                        i.fas.fa-check-circle
                                        i.fas.fa-exclamation-circle
                                        small Error Message
                                .col-lg-5.m-auto
                                    .parent
                                        input#lastname.form-control.my-3.p-4(type="text" placeholder="Last Name")
                                        i.fas.fa-check-circle
                                        i.fas.fa-exclamation-circle
                                        small Error Message
                            #form-row.form-row
                                .col-lg-7.m-auto
                                    .parent
                                        input#username.form-control.my-3.p-4(type="text" placeholder="Username")
                                        i.fas.fa-check-circle
                                        i.fas.fa-exclamation-circle
                                        small Error Message
                            #form-row.form-row
                                .col-lg-7.m-auto
                                    .parent
                                        input#email.form-control.my-3.p-4(type="email" placeholder="Email-Address")
                                        i.fas.fa-check-circle
                                        i.fas.fa-exclamation-circle
                                        small Error Message
                            #form-row.form-row
                                .col-lg-7.m-auto
                                    .parent
                                        input#password.form-control.my-3.p-4(type="password" placeholder="******")
                                        i.fas.fa-check-circle
                                        i.fas.fa-exclamation-circle
                                        small Error Message
                            #form-row.form-row
                                .col-lg-7.m-auto.form-rows
                                    .parent
                                        input#password2.form-control.my-3.p-4(type="password" placeholder="Confirm Password")
                                        i.fas.fa-check-circle
                                        i.fas.fa-exclamation-circle
                                        small Error Message
                            .form-row
                                .col-lg-7.m-auto.form-rows
                                    button#submit.btn1.mt-3.mb-3(type="submit")
                                        | Register
                                        | Now
                            a(href="#") Forgot Password
                            p.my-2
                                | you have account? 
                                a(href="logpage.html") Login here
        
        script(src="js/jquery-3.5.1.min.js")
        script(src="js/bootstrap.bundle.min.js")
        script(src="js/wow.min.js")
        script(src="js/jquery.nicescroll.min.js")
        script(src="js/formjs.js")